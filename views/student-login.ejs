<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Student Login</title>
  <link href="/css/student-login.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>
  <div class="login-container">
    <% if (locals.error) { %>
      <p class="error-message">
        <%= error %>
      </p>
      <% } %>

        <form action="/student-login" method="post" class="login-form">
          <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required />
          </div>

          <div class="input-group password-group">
            <label for="password">Password</label>
            <div class="password-container">
              <input type="password" id="password" name="password" placeholder="Enter your password" required />
              <button type="button" class="toggle-password" onclick="togglePassword()">Show</button>
            </div>
          </div>

          <button type="submit" class="login-button">Submit</button>
          <a href="./verify-email" class="forgot-password">Forgot password?</a>
          <p class="register-link">
            New Student? <a href="/register">Register here</a>
          </p>
        </form>
  </div>

  <script>
    function togglePassword() {
      const passwordInput = document.getElementById("password");
      const toggleBtn = document.querySelector(".toggle-password");

      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        toggleBtn.textContent = "Hide"; // Change to "Hide"
      } else {
        passwordInput.type = "password";
        toggleBtn.textContent = "Show"; // Change back to "Show"
      }
    }
  </script>
</body>

</html>